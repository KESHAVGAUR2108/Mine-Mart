<header>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<div class="container-fluid">
			<a class="navbar-brand" href="/"><b>Mine-Mart</b></a>
			<button
				class="navbar-toggler"
				type="button"
				data-bs-toggle="collapse"
				data-bs-target="#navbarSupportedContent"
				aria-controls="navbarSupportedContent"
				aria-expanded="false"
				aria-label="Toggle navigation"
			>
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a
							class="nav-link <%= path === '/'? 'active' : '' %>"
							aria-current="page"
							href="/"
							>Home</a
						>
					</li>
					<% if(isLoggedIn) { %>
					<li class="nav-item">
						<a
							class="nav-link <%= path === '/shop/cart'? 'active' : '' %>"
							href="/cart"
							>Cart</a
						>
					</li>
					<li class="nav-item">
						<a
							class="nav-link <%= path === '/shop/order'? 'active' : '' %>"
							href="/order"
							>Order</a
						>
					</li>
					<li class="nav-item">
						<a
							class="nav-link <%= path === '/admin/add-product'? 'active' : '' %>"
							href="/admin/edit-product"
							>Add Product</a
						>
					</li>
					<li class="nav-item mb-0">
						<a
							class="nav-link <%= path === '/admin/product-list'? 'active' : '' %>"
							href="/admin/product-list"
							>Admin Products</a
						>
					</li>
				</ul>
				<a class="d-flex navbar-nav nav-link" href="/logout"> LogOut </a>
				<%} else {%>
				</ul>
				<ul class="navbar-nav d-flex">
					<a class="nav-link <%= path === '/login'? 'active' : '' %>" href="/login">
						SignIn
					</a>
					<a class="nav-link <%= path === '/signup'? 'active' : '' %>" href="/signup">
						SignUp
					</a>
				</ul>
				<% } %>
			</div>
		</div>
	</nav>
</header>
