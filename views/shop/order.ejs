<%- include('../includes/head.ejs') %>
<body>
	<%- include('../includes/navigation.ejs') %>

	<main class="mt-3">
		<% if (orders.length>0) { %>
		<div class="container-fluid text-center">
			<% orders.forEach(order => { %>
			<div class="row gx-1">
				<div
					class="col col-9 col-xl-10 border border-secondary p-1"
					style="background-color: rebeccapurple; color: white"
				>
					OrderID: <%= order._id %>
				</div>
				<div class="col col-3 col-xl-2">
					<a href="/invoice/<%= order._id %>">
						<button style="width: 100%" class="btn btn-primary">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="16"
								height="16"
								fill="currentColor"
								class="bi bi-download"
								viewBox="0 0 16 16"
							>
								<path
									d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"
								/>
								<path
									d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"
								/>
							</svg>
							Invoice
						</button>
					</a>
				</div>
			</div>
			<div class="row gx-3 gy-2 mb-3 mt-2">
				<% for(let prod of order.items) { %>

				<div class="col col-sm-4 col-6 col-xl-3">
					<div class="shadow rounded mb-3">
						<h5 class="pt-3"><%= prod.product.title %></h5>
						<img
							src="/<%= prod.product.imageUrl %>"
							alt="<%= prod.product.title %>"
							width="100%"
							height="220px"
						/>
						<b>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="15"
								height="16"
								fill="currentColor"
								class="bi bi-currency-rupee"
								viewBox="0 0 16 16"
							>
								<path
									d="M4 3.06h2.726c1.22 0 2.12.575 2.325 1.724H4v1.051h5.051C8.855 7.001 8 7.558 6.788 7.558H4v1.317L8.437 14h2.11L6.095 8.884h.855c2.316-.018 3.465-1.476 3.688-3.049H12V4.784h-1.345c-.08-.778-.357-1.335-.793-1.732H12V2H4v1.06Z"
								/>
							</svg>
							<%= prod.product.price %> <br />
							Qty: <%= prod.quantity %>
						</b>
					</div>
				</div>
				<% } %>
			</div>
			<% }) %>
		</div>
		<% } else {%>
		<h1>No Products!</h1>
		<%}%>
	</main>
	<%- include('../includes/end.ejs') %>
</body>
