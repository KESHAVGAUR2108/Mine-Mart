<body>
    <%- include('../includes/navigation.ejs') %>
    <% if(product != null) { %>
        <main class=" rounded container text-center mt-1"  >
            <h2>
                <%= product.title %>
            </h2>
            <img class="shadow rounded" src="/<%= product.imageUrl %>" alt="<%= product.title %>" width = "80%" height="auto" style="background-color: rgb(3, 3, 3);">
            <h5>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-currency-rupee" viewBox="0 0 16 16">
                    <path d="M4 3.06h2.726c1.22 0 2.12.575 2.325 1.724H4v1.051h5.051C8.855 7.001 8 7.558 6.788 7.558H4v1.317L8.437 14h2.11L6.095 8.884h.855c2.316-.018 3.465-1.476 3.688-3.049H12V4.784h-1.345c-.08-.778-.357-1.335-.793-1.732H12V2H4v1.06Z"/>
                </svg>
                <%= product.price %> 
            </h5>
            <p>
                <%= product.description %>
            </p>
            <%- include('../includes/add-to-cart.ejs',{product: product}) %>
        </main>
    <% } else { %>
        <h1>Product not Found!</h1>
    <% } %>
<%- include('../includes/end.ejs') %>